<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.konrad.androidgameproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GUI.MainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GUI.Options" android:label="Adjust your settings" android:theme="@style/AppTheme" ></activity>
        <activity android:name=".GUI.Profile" android:label="Update your profile" android:theme="@style/AppTheme" ></activity>
        <activity android:name=".GUI.Game" android:label="STARWARS Card Quiz" android:theme="@style/AppTheme" ></activity>
        <activity android:name=".GUI.Difficulty" android:label="Select your difficulty" android:theme="@style/AppTheme" ></activity>
        <activity android:name=".GUI.Category" android:label="Manage active categories" android:theme="@style/AppTheme" ></activity>
        <service android:name=".Service.SoundService" android:enabled="true"/>
    </application>

</manifest>